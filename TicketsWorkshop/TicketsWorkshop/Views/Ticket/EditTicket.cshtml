
@model TicketsWorkshop.Models.TicketViewModel;

@{
    ViewData["Title"] = "EditTicket";
}

<div class="row justify-content-center mt-5 ">
    <div class="col-md-6 shadow border border-success border-1 shadow-lg p-3 mb-5  rounded">
        <form asp-action="EditTicket" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Entrances" />
            <input type="hidden" asp-for="EntranceId" />
            <h1>Registro boleto del concierto</h1>
            <hr />
            <partial name="_EditTicket"/>
            <div class="form-group mt-2 mb-2 offset-4">
                 <input type="submit" value="Validar" class="rounded-pill btn btn-outline-success" />
                <a asp-action="CheckTicket" class="rounded-pill btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

