@model TicketsWorkshop.Data.Entities.Ticket

@{
    ViewData["Title"] = "EditCheckTicket";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 shadow border border-success border-1 shadow-lg p-3 mb-5  rounded">
        <div class="panel panel-default">
            <div class="panel-body justify-content-center text-center ">
                 <div class="panel-heading">
                    <h3 class="panel-title mt-auto justify-content-center" style="font-size:200%; color:red;">El boleto no ha sido usado</h3>
                </div>
                <div class="form-group mt-2">
                    <a asp-action="EditTicket" asp-route-id="@Model?.Id" class="btn btn-outline-success">Registrar</a>
                    <a asp-action="CheckTicket" class="btn btn-outline-secondary">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}