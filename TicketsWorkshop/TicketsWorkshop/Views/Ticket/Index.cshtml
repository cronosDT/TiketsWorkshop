@model TicketsWorkshop.Models.TicketViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<hr />

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="CheckTicket" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <label asp-for="Id" class="control-label"></label>
                 <input asp-for="Id" class="form-control" />
                 <span asp-validation-for="Id" class="btn btn-outline-primary" />
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Validar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
