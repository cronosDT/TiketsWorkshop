@model IEnumerable<TicketsWorkshop.Data.Entities.Ticket>

@{
    ViewData["Title"] = "Index";
}

 
<div class="row justify-content-center mt-5">
    <div class="col-md-6 shadow border border-success border-1 shadow-lg p-3 mb-5  rounded">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Boleto</h3>
                    <p>
                        <a asp-action="CheckTicket" class="btn btn-outline-success">Validar boleto</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}